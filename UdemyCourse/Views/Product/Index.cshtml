@model IEnumerable<UdemyCourse.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="fa fa-plus"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>


    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped category-table">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Appointment Type
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>

                        <td class="w-30">@obj.Name</td>
                        <td class="w-10">@obj.Price</td>
                        <td class="w-20">@obj.Category.Name</td>
                        <td class="w-20">@obj.ApplicationType.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                    <i class="fa-regular fa-pen-to-square"></i>
                                </a>
                                <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fa-sharp fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-danger">No Product exists.</p>
    }

</div>